<?xml version="1.0" encoding="utf-8" ?>
<Window 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NoteAppView"
        mc:Ignorable="d"
        Title="Авторизация" Height="450" Width="800"
             x:Class="NoteAppView.LoginPage">
    <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                Background="LightGray">
        <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Grid.Column="0" Grid.Row="0">Login</Label>
            <TextBox x:Name="emailTextBox" Grid.Column="1" Grid.Row="0"
                     ></TextBox>
            <Label Grid.Column="0" Grid.Row="1">Pass</Label>
            <TextBox x:Name="passTextBox" Grid.Column="1" Grid.Row="1"></TextBox>
        </Grid>
    </StackPanel>

</Window>